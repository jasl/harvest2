<% flash.each do |k, v| %>
  <% k = "info" if k == "notice" %>
  <% k = "warning" if k == "alert" %>
  <div class="container">
    <div class="alert alert-<%= k %> alert-dismissible fade show mt-3 mb-0">
      <%= sanitize v.html_safe %>

      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>
