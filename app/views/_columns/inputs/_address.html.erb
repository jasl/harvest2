<div class="mb-3 row">
  <div class="col-sm-2"><%= column.name %></div>
  <div class="col-sm-10">
    <div class="row g-3">
      <div class="col-12">
        <%= f.label column.symbolized_key_for("address"), t("inputs.address.address"), class: "form-label"  %>
        <%= f.text_field column.symbolized_key_for("address"), class: "form-control", id: column.symbolized_key_for("address"), required: column.not_null?, class_for_error: "is-invalid" %>
        <%= f.error_message column.symbolized_key_for("address"), class: "invalid-feedback" %>
      </div>
      <div class="col-12">
        <%= f.label column.symbolized_key_for("address2"), t("inputs.address.address2"), class: "form-label"  %>
        <%= f.text_field column.symbolized_key_for("address2"), class: "form-control", id: column.symbolized_key_for("address2"), class_for_error: "is-invalid" %>
        <%= f.error_message column.symbolized_key_for("address2"), class: "invalid-feedback" %>
      </div>
      <div class="col-md-6">
        <%= f.label column.symbolized_key_for("city"), t("inputs.address.city"), class: "form-label"  %>
        <%= f.text_field column.symbolized_key_for("city"), class: "form-control", id: column.symbolized_key_for("city"), required: column.not_null?, class_for_error: "is-invalid" %>
        <%= f.error_message column.symbolized_key_for("city"), class: "invalid-feedback" %>
      </div>
      <div class="col-md-4">
        <%= f.label column.symbolized_key_for("state"), t("inputs.address.state"), class: "form-label"  %>
        <%= f.text_field column.symbolized_key_for("state"), class: "form-control", id: column.symbolized_key_for("state"), required: column.not_null?, class_for_error: "is-invalid" %>
        <%= f.error_message column.symbolized_key_for("state"), class: "invalid-feedback" %>
      </div>
      <div class="col-md-2">
        <%= f.label column.symbolized_key_for("zip"), t("inputs.address.zip"), class: "form-label"  %>
        <%= f.text_field column.symbolized_key_for("zip"), class: "form-control", id: column.symbolized_key_for("zip"), required: column.not_null?, class_for_error: "is-invalid" %>
        <%= f.error_message column.symbolized_key_for("zip"), class: "invalid-feedback" %>
      </div>
    </div>
  </div>
</div>
