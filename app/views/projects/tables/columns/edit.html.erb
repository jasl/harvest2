<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">
            Editing <%= @column.name %>
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <%= link_to "Back to table", project_table_path(@project, @table), class: "btn btn-primary mr-2" %>
            <%= link_to "Add another column", new_project_table_column_path(@project, @table), class: "btn btn-primary mr-2" %>
            <%= link_to "Delete the column", project_table_column_path(@project, @table, @column), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container mb-3">
        <%= render "tabs" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <%= render "form", project: @project, table: @table, column: @column %>
      </div>
    </div>
  </div>
</div>
