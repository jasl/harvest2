<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">
            <%= @table.name %>
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <%= link_to "Back to records", project_path(@project), class: "btn btn-primary me-2" %>
            <%= link_to "Generate random record", generate_project_table_records_path(@project, @table), method: :post, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container mb-3">
        <%= render "projects/tables/tabs" %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="container">
        <% @table.columns.each do |column| %>
          <dt class="col-sm-3">
            <%= column.name %>
          </dt>
          <dd class="col-sm-9">
            <% if column.reference_column? %>
              <%= column.render_display_value(@record, view_context: self) %>
            <% else %>
              <%= column.render_display_value(@record, view_context: self) %>
            <% end %>
          </dd>
        <% end %>
      </div>
    </div>
  </div>
</div>
