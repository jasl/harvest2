<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">
            <%= @table.name %>
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <%= link_to "Back to queries", project_table_queries_path(@project, @table), class: "btn btn-primary mr-2" %>
            <%= link_to "Edit", edit_project_table_query_path(@project, @table, @query), class: "btn btn-primary mr-2" %>
            <%= link_to "Destroy", project_table_query_path(@project, @table, @query), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container mb-3">
        <%= render "projects/tables/tabs" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              <% @table.columns.each do |column| %>
                <th>
                  <%= column.name %>
                </th>
              <% end %>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @records.each do |record| %>
              <tr>
                <% @table.columns.each do |column| %>
                  <td>
                    <%= record.read_attribute(column.key) %>
                  </td>
                <% end %>
                <td>
                  <%= link_to "Edit", edit_project_table_record_path(@project, @table, record), class: "text-primary" %> |
                  <%= link_to "Destroy", project_table_record_path(@project, @table, record), method: :delete, class: "text-danger", data: { confirm: "Are you sure?" } %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

        <%= paginate @records %>
      </div>
    </div>
  </div>
</div>
