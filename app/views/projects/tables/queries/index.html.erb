<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">
            <%= @table.name %>
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <%= link_to "Back to project", project_path(@project), class: "btn btn-primary me-2" %>
            <%= link_to "New query", new_project_table_query_path(@project, @table), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container mb-3">
        <%= render "projects/tables/tabs" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Updated at</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @queries.each do |query| %>
            <tr>
              <td><%= query.name %></td>
              <td><%= query.updated_at %></td>
              <td>
                <%= link_to "Edit", edit_project_table_query_path(@project, @table, query) %> |
                <%= link_to "Data", project_table_query_path(@project, @table, query) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <%= paginate @queries %>
      </div>
    </div>
  </div>
</div>
