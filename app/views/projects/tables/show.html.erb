<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">
            <%= @table.name %>
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <%= link_to "Back to project", project_path(@project), class: "btn btn-primary mr-2" %>
            <%= link_to "Edit the table", edit_project_table_path(@project, @table), class: "btn btn-primary mr-2" %>
            <%= link_to "Delete the table", project_table_path(@project, @table), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container mb-3">
        <%= render "tabs" %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="container">
        <dl class="row">
          <dt class="col-sm-3">
            Key
          </dt>
          <dd class="col-sm-9">
            <%= @table.key %>
          </dd>

          <dt class="col-sm-3">
            Name
          </dt>
          <dd class="col-sm-9">
            <%= @table.name %>
          </dd>

          <dt class="col-sm-3">
            Description
          </dt>
          <dd class="col-sm-9">
            <%= @table.description.present? ? @table.description : "-" %>
          </dd>

          <dt class="col-sm-3">
            Thumbnail column
          </dt>
          <dd class="col-sm-9">
            <%= @table.thumbnail_column&.name %>
          </dd>

          <dt class="col-sm-3">
            Updated at
          </dt>
          <dd class="col-sm-9">
            <%= time_tag @table.updated_at %>
          </dd>
        </dl>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h4>
            Columns
          </h4>
          <div class="btn-toolbar mb-2 mb-md-0">
            <%= link_to "New Column", new_project_table_column_path(@project, @table), class: "btn btn-primary" %>
          </div>
        </div>

        <table class="table">
          <thead>
          <tr>
            <th>Name</th>
            <th>Key</th>
            <th>Type</th>
            <th>Updated at</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @table.columns.each do |column| %>
            <tr>
              <td><%= column.name %></td>
              <td><%= column.key %></td>
              <td><%= column.class.model_name.human %></td>
              <td><%= time_tag column.updated_at %></td>
              <td>
                <%= link_to "Edit", edit_project_table_column_path(@project, @table, column) %>
                <% if column.destroyable? %>
                  | <%= link_to "Destroy", project_table_column_path(@project, @table, column), method: :delete, class: "text-danger", data: { confirm: "Are you sure?" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
