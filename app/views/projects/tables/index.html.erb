<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">
            <%= @project.name %>
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <%= link_to "Back to projects", projects_path, class: "btn btn-primary mr-2" %>
            <%= link_to "New table", new_project_table_path(@project), class: "btn btn-primary mr-2" %>
            <%= link_to "Generate table", generate_project_tables_path(@project), method: :post, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <%= render "projects/tabs" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <table class="table">
          <thead>
          <tr>
            <th>Key</th>
            <th>Name</th>
            <th>Updated at</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @tables.each do |table| %>
            <tr>
              <td><%= table.key %></td>
              <td><%= table.name %></td>
              <td><%= time_tag table.updated_at %></td>
              <td>
                <%= link_to "Show", project_table_path(@project, table) %> |
                <%= link_to "Data", project_table_records_path(@project, table) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <%= paginate @tables %>
      </div>
    </div>
  </div>
</div>
