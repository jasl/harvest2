<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">
            <%= @table.name %>
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <%= link_to "Back to project", project_path(@project), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container mb-3">
        <%= render "projects/tables/tabs" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Column</th>
            <th>Foreign column</th>
          </tr>
          </thead>
          <tbody>
          <% (@has_many_relationships + @belongs_to_relationships).each do |relationship| %>
            <tr>
              <td>
                <%= link_to relationship.table.name, project_table_path(@project, relationship.table) %>
                ::
                <%= link_to relationship.column.name, edit_project_table_column_path(@project, @table, relationship.column) %>
              </td>
              <td>
                <%= link_to relationship.foreign_table.name, project_table_path(@project, relationship.foreign_table) %>
                ::
                <%= link_to relationship.foreign_column.name, edit_project_table_column_path(@project, relationship.foreign_table, relationship.foreign_column) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
