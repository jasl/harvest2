<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="container">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2">
            Projects
          </h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <%= link_to "New project", new_project_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="container">
        <table class="table">
          <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Updated at</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.id %></td>
              <td><%= project.name %></td>
              <td><%= time_tag project.updated_at %></td>
              <td>
                <%= link_to "Show", project_path(project) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <%= paginate @projects %>
      </div>
    </div>
  </div>
</div>
